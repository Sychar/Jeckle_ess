<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"


    tools:context=".View.D_Base">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:orientation="vertical">



        <Button
            android:id="@+id/listdata"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:background="#00a0c3"
            android:onClick="onClick"
            android:text="show the DatanLogger "

            android:textColor="#E8F0E8"></Button>

        <Button
            android:id="@+id/listdata1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="270dp"
            android:background="#00a0c3"
            android:onClick="onClickJobs"
            android:text="show the jobs data  "
            android:textColor="#E8F0E8"></Button>


    </LinearLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_width="550dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="-21dp"
        android:layout_marginBottom="26dp"
        android:layout_toRightOf="@+id/buttons"
        android:scaleY="1.5"
        android:src="@drawable/test"></ImageView>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="#00a0c3"
        android:onClick="close"
        android:text="EXIT"
        android:textColor="#b10e03"></Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="27dp"
        android:text=" Copy Rihgt @JÃ¤ckleESS 2020 "
        android:textColor="#00a0c3"
        android:textSize="27sp" />

    <Button
        android:id="@+id/export"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="9dp"
        android:background="#00a0c3"
        android:text="Export_Data"
        android:textColor="#E8F0E8" />

</RelativeLayout>