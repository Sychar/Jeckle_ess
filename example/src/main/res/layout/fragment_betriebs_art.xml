<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.BetriebsArt">

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="400dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border2"
            android:gravity="center"
            android:text="BetriebsArt"

            android:textColor="#ffff"
            android:textSize="20sp"></TextView>

        <ScrollView
            android:fillViewport="true"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="650dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".View.Verfahren">
                <LinearLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border2"
                    android:layout_width="610dp"
                    android:layout_height="90dp"
                    >
                    <Button
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt1 "
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt2"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt13 "
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt4 "
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:id="@+id/kennlinie"
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt5"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>

                </LinearLayout>
                <LinearLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border2"
                    android:layout_width="610dp"
                    android:layout_height="90dp"
                    >
                    <Button
                        android:id="@+id/kennlinie1"
                        android:layout_weight="1"
                        android:layout_width="1dp"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt16"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt7"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt8"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt19"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:background="@drawable/border2"
                        android:text="BetriebsArt10"
                        android:textColor="#ffff"
                        android:gravity="center"> </Button>
                </LinearLayout>



            </LinearLayout
                >
        </ScrollView>

    </LinearLayout
        >
</FrameLayout>