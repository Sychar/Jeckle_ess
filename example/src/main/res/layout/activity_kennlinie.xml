<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".View.JobsUser">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_width="650dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/head">

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Num"
                android:textSize="20sp">
            </TextView>
            <TextView

                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME"
                android:textSize="20sp">
            </TextView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_width="650dp"
        android:layout_height="100dp"
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/item"
        app:cardElevation="5dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"></TextView>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kennlinie1"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-01.2020"
                android:textSize="20sp">
            </TextView>
            <Button
                android:onClick="jobuser"
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="show"
                ></Button>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="delet"
                android:textColor="#EB0E0E"
                ></Button>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_width="650dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/item">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:text="Kennlinie2"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="11.02.2020"
                android:textSize="20sp"></TextView>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="show"
                ></Button>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="delet"
                android:textColor="#EB0E0E"
                ></Button>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_width="650dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/item">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kennlinie3"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.03.2020"
                android:textSize="20sp">
            </TextView>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="show"
                ></Button>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="delet"
                android:textColor="#EB0E0E"
                ></Button>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:layout_width="650dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/item">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kennlinie3"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.03.2020"
                android:textSize="20sp">
            </TextView>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="show"
                ></Button>
            <Button
                android:layout_margin="7dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/daten_bank_button"
                android:text="delet"
                android:textColor="#EB0E0E"
                ></Button>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>